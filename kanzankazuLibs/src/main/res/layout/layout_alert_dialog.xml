<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/activity_margin"
    android:background="@drawable/bg_white_dialog"
    android:elevation="@dimen/activity_margin_half"
    android:orientation="vertical"
    android:padding="@dimen/activity_margin">

    <TextView
        android:id="@+id/tvDialogAlertMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/baseBlack"
        tools:text="@tools:sample/lorem[10]" />

    <TextView
        android:id="@+id/tvDialogAlertActionRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="@dimen/activity_margin"
        android:textAllCaps="true"
        android:textColor="@color/baseRed"
        tools:text="@tools:sample/lorem" />

</LinearLayout>

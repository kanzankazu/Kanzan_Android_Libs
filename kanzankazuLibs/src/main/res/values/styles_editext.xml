<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="EtClickable" parent="TvStandard">
        <item name="android:inputType">none</item>
        <item name="android:focusable">false</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="EtMultiline" parent="TvStandard">
        <item name="android:inputType">textMultiLine</item>
        <item name="android:minLines">2</item>
        <item name="android:gravity">top</item>
        <item name="android:lineSpacingExtra">@dimen/activity_margin_quarter</item>
    </style>

    <style name="EtNumber" parent="TvStandard">
        <item name="android:inputType">number</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="EtText" parent="TvStandard">
        <item name="android:inputType">text</item>
        <item name="android:singleLine">true</item>
        <item name="android:imeOptions">actionNext</item>
    </style>

    <style name="EtTextDisable" parent="TvStandard">
        <item name="android:enabled">false</item>
        <item name="android:clickable">false</item>
        <item name="android:inputType">text</item>
        <item name="android:focusable">false</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="EtTextEmail" parent="TvStandard">
        <item name="android:inputType">textEmailAddress</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="EtTextNonEditable" parent="TvStandard">
        <item name="android:editable">false</item>
        <item name="android:inputType">none</item>
        <item name="android:focusable">false</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="EtTextPassword" parent="TvStandard">
        <item name="android:inputType">textPassword</item>
        <item name="android:singleLine">true</item>
    </style>
</resources>